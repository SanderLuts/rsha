#!/bin/bash
sh apache_install #kontrollib kas apache2 on olemas, kui ei ole siis installib
sh php_install #kontrollib kas php on olemas, kui ei ole siis installib
sh mysql-server_install #k채vitab mysql skripti mis kontrollib kas mysql on olemas, kui ei ole siis installib
sh phpmyadmin_install #k채ivitab phpmyadmin install skripti, mis kontrollib kas phpmyadmin on olemas, kui ei ole siis insallib
cd /var/www/html/ #vahetab kausta
wget https://wordpress.org/latest.tar.gz #laeb alla k천ige uuema wordpressi
tar xpf latest.tar.gz #pakib lahti tar faili
chown -R www-data:www-data /var/www/html #vahetab html kausta 천igused
rm latest.tar.gz
rm index.html
touch /etc/apache2/site-available/wordpress.conf
echo "Listen 80
<VirtualHost *:80>
        ServerAdmin webmaster@localhost
        DocumentRoot /var/www/html/wordpress
        ErrorLog ${APACHE_LOG_DIR}/error.log
</VirtualHost>"
a2ensite wordpress.conf
service apache2 reload
